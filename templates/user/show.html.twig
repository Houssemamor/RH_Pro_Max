{% extends 'base.html.twig' %}

{% block title %}Employee Details - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Employee Details</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}">Employees</a></li>
            <li class="breadcrumb-item active text-primary">{{ user.firstName }} {{ user.lastName }}</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>{{ user.firstName }} {{ user.lastName }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <th class="text-muted" style="width: 40%">ID</th>
                                        <td>{{ user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Matricule</th>
                                        <td><span class="badge bg-secondary">{{ user.matricule }}</span></td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Email</th>
                                        <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Status</th>
                                        <td>
                                            {% if user.status %}
                                                <span class="badge bg-{{ user.status.value == 'ACTIVE' ? 'success' : 'secondary' }}">
                                                    {{ user.status.value }}
                                                </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Role</th>
                                        <td>
                                            {% if user.role %}
                                                <span class="badge bg-{{ user.role.value == 'ADMIN' ? 'danger' : (user.role.value == 'MANAGER' ? 'warning' : 'info') }}">
                                                    {{ user.role.value }}
                                                </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <th class="text-muted" style="width: 40%">Department</th>
                                        <td>{{ user.department }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Job Title</th>
                                        <td>{{ user.jobTitle }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Birthday</th>
                                        <td>{{ user.birthday ? user.birthday|date('M d, Y') : '-' }}</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Hire Date</th>
                                        <td>{{ user.hireDate ? user.hireDate|date('M d, Y') : '-' }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning rounded-pill">
                                <i class="fas fa-edit me-2"></i>Edit Employee
                            </a>
                            <a href="{{ path('app_user_index') }}" class="btn btn-outline-primary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                        <hr>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
