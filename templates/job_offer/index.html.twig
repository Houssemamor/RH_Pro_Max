{% extends 'base.html.twig' %}

{% block title %}Job Offers - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Job Offers</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item active text-primary">Job Offers</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-briefcase me-2"></i>Job Offers</h2>
            {% if is_granted('ROLE_HR_MANAGER') %}
            <a href="{{ path('app_job_offer_new') }}" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i>Create Job Offer
            </a>
            {% endif %}
        </div>
        
        <div class="table-responsive bg-white rounded shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Closing Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for job_offer in job_offers %}
                    <tr>
                        <td>{{ job_offer.id }}</td>
                        <td><strong>{{ job_offer.title }}</strong></td>
                        <td><i class="fas fa-map-marker-alt text-muted me-1"></i>{{ job_offer.location }}</td>
                        <td>
                            {% if job_offer.status %}
                                <span class="badge bg-{{ job_offer.status.value == 'OPEN' ? 'success' : (job_offer.status.value == 'CLOSED' ? 'secondary' : 'warning') }}">
                                    {{ job_offer.status.value }}
                                </span>
                            {% endif %}
                        </td>
                        <td>{{ job_offer.createdAt ? job_offer.createdAt|date('M d, Y') : '-' }}</td>
                        <td>{{ job_offer.closingDate ? job_offer.closingDate|date('M d, Y') : '-' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if is_granted('ROLE_HR_MANAGER') %}
                            <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}" class="btn btn-sm btn-outline-warning rounded-pill" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No job offers found</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
