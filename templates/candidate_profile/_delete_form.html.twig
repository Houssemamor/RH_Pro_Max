<form method="post" action="{{ path('app_candidate_profile_delete', {'id': candidate_profile.id}) }}" onsubmit="return confirm('Are you sure you want to delete this candidate? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidate_profile.id) }}">
    <button class="btn btn-danger rounded-pill"><i class="fas fa-trash me-2"></i>Delete</button>
</form>
