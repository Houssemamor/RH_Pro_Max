{% extends 'base.html.twig' %}

{% block title %}{{ candidate_profile.fullName }} - Candidate - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Candidate Details</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_candidate_profile_index') }}">Candidates</a></li>
            <li class="breadcrumb-item active text-primary">{{ candidate_profile.fullName }}</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>{{ candidate_profile.fullName }}</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 30%">ID</th>
                                <td>{{ candidate_profile.id }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Full Name</th>
                                <td><strong>{{ candidate_profile.fullName }}</strong></td>
                            </tr>
                            <tr>
                                <th class="text-muted">Email</th>
                                <td><a href="mailto:{{ candidate_profile.email }}"><i class="fas fa-envelope me-1"></i>{{ candidate_profile.email }}</a></td>
                            </tr>
                            <tr>
                                <th class="text-muted">Status</th>
                                <td>
                                    {% if candidate_profile.status %}
                                        {% set statusClass = {
                                            'NEW': 'primary',
                                            'SCREENING': 'info',
                                            'INTERVIEW': 'warning',
                                            'OFFER': 'success',
                                            'HIRED': 'success',
                                            'REJECTED': 'danger'
                                        } %}
                                        <span class="badge bg-{{ statusClass[candidate_profile.status.value] ?? 'secondary' }}">
                                            {{ candidate_profile.status.value }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Applied On</th>
                                <td>{{ candidate_profile.createdAt ? candidate_profile.createdAt|date('M d, Y \a\t H:i') : '-' }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_candidate_profile_edit', {'id': candidate_profile.id}) }}" class="btn btn-warning rounded-pill">
                                <i class="fas fa-edit me-2"></i>Edit Candidate
                            </a>
                            <a href="{{ path('app_candidate_profile_index') }}" class="btn btn-outline-primary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                        <hr>
                        {{ include('candidate_profile/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
