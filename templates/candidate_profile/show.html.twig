{% extends 'base.html.twig' %}

{% block title %}{{ candidate_profile.fullName }} - Candidate - RH Pro Max{% endblock %}

{% block header %}
    <!-- Header Start -->
    <div class="container-fluid bg-breadcrumb">
        <div class="container text-center py-5" style="max-width: 900px;">
            <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">
                Candidate Details
            </h4>
            <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_candidate_profile_index') }}">Candidates</a>
                </li>
                <li class="breadcrumb-item active text-primary">{{ candidate_profile.fullName }}</li>
            </ol>
        </div>
    </div>
    <!-- Header End -->
{% endblock %}

{% block body %}
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user-tie me-2"></i>{{ candidate_profile.fullName }}
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th class="text-muted" style="width: 30%">ID</th>
                                    <td>{{ candidate_profile.id }}</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Full Name</th>
                                    <td><strong>{{ candidate_profile.fullName }}</strong></td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Email</th>
                                    <td>
                                        <a href="mailto:{{ candidate_profile.email }}">
                                            <i class="fas fa-envelope me-1"></i>{{ candidate_profile.email }}
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Status</th>
                                    <td>
                                        {% if candidate_profile.status %}
                                            {% set statusClass = {
                                                'NEW': 'primary',
                                                'SCREENED': 'info',
                                                'INTERVIEW': 'warning',
                                                'HIRED': 'success',
                                                'REJECTED': 'danger'
                                            } %}
                                            <span class="badge bg-{{ statusClass[candidate_profile.status.value] ?? 'secondary' }}">
                                            {{ candidate_profile.status.value }}
                                        </span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Applied For</th>
                                    <td>
                                        {% if candidate_profile.jobOffer %}
                                            <a href="{{ path('app_job_offer_show', {'id': candidate_profile.jobOffer.id}) }}">
                                                <i class="fas fa-briefcase me-1"></i>{{ candidate_profile.jobOffer.title }}
                                            </a>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Applied On</th>
                                    <td>
                                        {{ candidate_profile.createdAt ? candidate_profile.createdAt|date('M d, Y \\a\\t H:i') : '-' }}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- CV Documents Section -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="fas fa-file-alt me-2"></i>
                                CV Documents ({{ candidate_profile.cvs|length }})
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if candidate_profile.cvs|length > 0 %}
                                <div class="list-group">
                                    {% for cv in candidate_profile.cvs %}
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                                <strong>{{ cv.filePath }}</strong><br>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Uploaded: {{ cv.uploadedAt|date('M d, Y \\a\\t H:i') }}
                                                    {% if cv.parsedAt %}
                                                        | <i class="fas fa-check-circle text-success me-1"></i>
                                                        Parsed: {{ cv.parsedAt|date('M d, Y \\a\\t H:i') }}
                                                    {% endif %}
                                                </small>
                                            </div>
                                            <a href="{{ asset('uploads/cvs/' ~ cv.filePath) }}"
                                               class="btn btn-sm btn-primary rounded-pill"
                                               target="_blank">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="fas fa-file-upload fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No CV documents uploaded yet.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Skills Section with Matching -->
                    {% if skill_match %}
                        <div class="card shadow-sm mb-4">
                            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <h5 class="mb-0 text-white">
                                    <i class="fas fa-chart-pie me-2"></i>Skill Match Analysis
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center mb-4">
                                    <div class="mb-3">
                                        <h2 class="display-4 mb-0 
                                            {% if skill_match.level == 'excellent' %}text-success
                                            {% elseif skill_match.level == 'good' %}text-primary
                                            {% elseif skill_match.level == 'fair' %}text-warning
                                            {% else %}text-danger{% endif %}">
                                            {{ skill_match.matchPercentage }}%
                                        </h2>
                                        <p class="text-muted">Overall Match</p>
                                    </div>
                                    <span class="badge 
                                        {% if skill_match.level == 'excellent' %}bg-success
                                        {% elseif skill_match.level == 'good' %}bg-primary
                                        {% elseif skill_match.level == 'fair' %}bg-warning
                                        {% else %}bg-danger{% endif %} fs-6 px-3 py-2">
                                        {{ skill_match.level|upper }}
                                    </span>
                                </div>
                                
                                {% if skill_match.matchedSkills|length > 0 %}
                                <div class="mb-3">
                                    <h6 class="text-success"><i class="fas fa-check-circle me-2"></i>Matched Skills ({{ skill_match.matchedSkills|length }})</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for jobSkill in skill_match.matchedSkills %}
                                        <span class="badge bg-success">
                                            {{ jobSkill.skill.name }}
                                            {% if jobSkill in skill_match.exceedingSkills %}
                                            <i class="fas fa-arrow-up ms-1" title="Exceeds requirement"></i>
                                            {% endif %}
                                        </span>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                                
                                {% if skill_match.bonusSkills|length > 0 %}
                                <div class="mb-3">
                                    <h6 class="text-info"><i class="fas fa-plus-circle me-2"></i>Bonus Skills ({{ skill_match.bonusSkills|length }})</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for jobSkill in skill_match.bonusSkills %}
                                        <span class="badge bg-info">{{ jobSkill.skill.name }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                                
                                {% if skill_match.missingSkills|length > 0 %}
                                <div class="mb-3">
                                    <h6 class="text-danger"><i class="fas fa-times-circle me-2"></i>Missing Skills ({{ skill_match.missingSkills|length }})</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for jobSkill in skill_match.missingSkills %}
                                        <span class="badge bg-danger">
                                            {{ jobSkill.skill.name }}
                                            <span class="badge bg-light text-dark ms-1">{{ jobSkill.requiredLevel.name }}</span>
                                        </span>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                    
                    <!-- All Skills Section -->
                    {% if candidate_profile.skills|length > 0 %}
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-star me-2"></i>All Candidate Skills ({{ candidate_profile.skills|length }})
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex flex-wrap gap-2">
                                    {% for candidateSkill in candidate_profile.skills %}
                                        <span class="badge bg-secondary fs-6">
                                            {{ candidateSkill.skill.name }}
                                            <span class="badge bg-light text-dark ms-1">{{ candidateSkill.level.name }}</span>
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <i class="fas fa-cog me-2"></i>Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2 mb-3">
                                {% if is_granted('ROLE_RECRUITER') %}
                                    <a href="{{ path('app_candidate_profile_manage', {'id': candidate_profile.id}) }}"
                                       class="btn btn-success rounded-pill">
                                        <i class="fas fa-envelope-open-text me-2"></i>
                                        Manage application / Send email
                                    </a>
                                {% endif %}

                                <a href="{{ path('app_candidate_profile_edit', {'id': candidate_profile.id}) }}"
                                   class="btn btn-warning rounded-pill">
                                    <i class="fas fa-edit me-2"></i>Edit Candidate
                                </a>

                                <a href="{{ path('app_candidate_profile_index') }}"
                                   class="btn btn-outline-primary rounded-pill">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>

                            <hr>

                            {{ include('candidate_profile/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}