<form method="post" action="{{ path('app_skill_delete', {'id': skill.id}) }}" onsubmit="return confirm('Are you sure you want to delete this skill? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">
    <button class="btn btn-danger rounded-pill"><i class="fas fa-trash me-2"></i>Delete</button>
</form>
