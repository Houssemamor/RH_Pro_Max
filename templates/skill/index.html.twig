{% extends 'base.html.twig' %}

{% block title %}Skills - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Skills Database</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item active text-primary">Skills</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-cogs me-2"></i>Skills</h2>
            <a href="{{ path('app_skill_new') }}" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i>Add New Skill
            </a>
        </div>
        
        <div class="table-responsive bg-white rounded shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for skill in skills %}
                    <tr>
                        <td>{{ skill.id }}</td>
                        <td><strong>{{ skill.name }}</strong></td>
                        <td>
                            {% if skill.category %}
                                <span class="badge bg-info">{{ skill.category.name }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>{{ skill.description|length > 50 ? skill.description|slice(0, 50) ~ '...' : skill.description }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_skill_show', {'id': skill.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_skill_edit', {'id': skill.id}) }}" class="btn btn-sm btn-outline-warning rounded-pill" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No skills found</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
