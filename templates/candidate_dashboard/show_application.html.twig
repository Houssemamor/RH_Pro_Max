{% extends 'base.html.twig' %}

{% block title %}Application Details - {{ application.jobOffer.title }} - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Application Details</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_candidate_dashboard') }}">My Applications</a></li>
            <li class="breadcrumb-item active text-primary">{{ application.jobOffer.title }}</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Job Offer Details -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>{{ application.jobOffer.title }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><i class="fas fa-map-marker-alt text-primary me-2"></i><strong>Location:</strong> {{ application.jobOffer.location }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><i class="fas fa-calendar text-primary me-2"></i><strong>Closing Date:</strong> {{ application.jobOffer.closingDate|date('M d, Y') }}</p>
                            </div>
                        </div>
                        <h6>Job Description:</h6>
                        <p>{{ application.jobOffer.description|nl2br }}</p>
                    </div>
                </div>

                <!-- Application Status -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Application Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Applied On:</strong> {{ application.createdAt|date('M d, Y \\a\\t H:i') }}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Current Status:</strong>
                                    {% set statusClass = {
                                        'NEW': 'primary',
                                        'SCREENING': 'info',
                                        'INTERVIEW': 'warning',
                                        'OFFER': 'success',
                                        'HIRED': 'success',
                                        'REJECTED': 'danger'
                                    } %}
                                    <span class="badge bg-{{ statusClass[application.status.value] ?? 'secondary' }} fs-6">
                                        {{ application.status.value }}
                                    </span>
                                </p>
                            </div>
                        </div>

                        <!-- Status explanation -->
                        <div class="alert alert-info">
                            <i class="fas fa-lightbulb me-2"></i>
                            {% if application.status.value == 'NEW' %}
                                Your application has been received and is awaiting review by the recruitment team.
                            {% elseif application.status.value == 'SCREENING' %}
                                Your application is being reviewed by the recruitment team.
                            {% elseif application.status.value == 'INTERVIEW' %}
                                Congratulations! You've been selected for an interview. We will contact you soon.
                            {% elseif application.status.value == 'OFFER' %}
                                Great news! You've received a job offer. Please check your email for details.
                            {% elseif application.status.value == 'HIRED' %}
                                Congratulations! You've been hired. Welcome to the team!
                            {% elseif application.status.value == 'REJECTED' %}
                                We appreciate your interest, but unfortunately your application was not selected for this position.
                            {% endif %}
                        </div>

                        <!-- Interview Information -->
                        {% if application.interviewAt %}
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-calendar-check me-2"></i>Interview Scheduled</h6>
                            <p class="mb-1"><strong>Date & Time:</strong> {{ application.interviewAt|date('l, F d, Y \\a\\t H:i') }}</p>
                            {% if application.recruiterNotes %}
                                <hr>
                                <p class="mb-0"><strong>Message from recruiter:</strong><br>{{ application.recruiterNotes|nl2br }}</p>
                            {% endif %}
                        </div>
                        {% elseif application.recruiterNotes %}
                        <div class="alert alert-secondary">
                            <h6><i class="fas fa-comment-alt me-2"></i>Message from Recruiter</h6>
                            <p class="mb-0">{{ application.recruiterNotes|nl2br }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Skill Match Section -->
                {% if skill_match %}
                <div class="card shadow-sm mb-4">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-chart-pie me-2"></i>Your Skill Match
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <h2 class="display-4 mb-0 
                                    {% if skill_match.level == 'excellent' %}text-success
                                    {% elseif skill_match.level == 'good' %}text-primary
                                    {% elseif skill_match.level == 'fair' %}text-warning
                                    {% else %}text-danger{% endif %}">
                                    {{ skill_match.matchPercentage }}%
                                </h2>
                                <p class="text-muted">Match Score</p>
                            </div>
                            <span class="badge 
                                {% if skill_match.level == 'excellent' %}bg-success
                                {% elseif skill_match.level == 'good' %}bg-primary
                                {% elseif skill_match.level == 'fair' %}bg-warning
                                {% else %}bg-danger{% endif %} fs-6 px-3 py-2">
                                {{ skill_match.level|upper }}
                            </span>
                        </div>
                        
                        {% if skill_match.matchedSkills|length > 0 %}
                        <div class="mb-3">
                            <h6 class="text-success"><i class="fas fa-check-circle me-2"></i>Matched Skills</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for jobSkill in skill_match.matchedSkills %}
                                <span class="badge bg-success">{{ jobSkill.skill.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if skill_match.bonusSkills|length > 0 %}
                        <div class="mb-3">
                            <h6 class="text-info"><i class="fas fa-plus-circle me-2"></i>Bonus Skills</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for jobSkill in skill_match.bonusSkills %}
                                <span class="badge bg-info">{{ jobSkill.skill.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if skill_match.missingSkills|length > 0 %}
                        <div class="mb-3">
                            <h6 class="text-danger"><i class="fas fa-times-circle me-2"></i>Skills to Improve</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for jobSkill in skill_match.missingSkills %}
                                <span class="badge bg-danger">
                                    {{ jobSkill.skill.name }}
                                    <span class="badge bg-light text-dark ms-1">{{ jobSkill.requiredLevel.name }}</span>
                                </span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}

                <!-- My Skills Section -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>My Skills</h5>
                        <a href="{{ path('app_candidate_add_skill', {'id': application.id}) }}" class="btn btn-primary btn-sm rounded-pill">
                            <i class="fas fa-plus me-1"></i>Add Skill
                        </a>
                    </div>
                    <div class="card-body">
                        {% if application.skills|length > 0 %}
                            <div class="d-flex flex-wrap gap-2">
                                {% for candidateSkill in application.skills %}
                                <div class="position-relative">
                                    <span class="badge bg-secondary fs-6">
                                        {{ candidateSkill.skill.name }}
                                        <span class="badge bg-light text-dark ms-1">{{ candidateSkill.level.name }}</span>
                                    </span>
                                    <form action="{{ path('app_candidate_delete_skill', {'id': candidateSkill.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Remove this skill?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-skill' ~ candidateSkill.id) }}">
                                        <button type="submit" class="btn btn-sm btn-link text-danger p-0 ms-1" style="font-size: 0.7em; text-decoration: none;">
                                            <i class="fas fa-times-circle"></i>
                                        </button>
                                    </form>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-3">
                                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No skills added yet</h6>
                                <p class="text-muted small">Add your skills to improve your application match!</p>
                                <a href="{{ path('app_candidate_add_skill', {'id': application.id}) }}" class="btn btn-primary btn-sm rounded-pill">
                                    <i class="fas fa-plus me-2"></i>Add Your First Skill
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Skills Section -->
                {% if skill_match %}
                <div class="card shadow-sm mb-4">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-chart-pie me-2"></i>Skill Match Analysis
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <h2 class="display-4 mb-0 
                                    {% if skill_match.level == 'excellent' %}text-success
                                    {% elseif skill_match.level == 'good' %}text-primary
                                    {% elseif skill_match.level == 'fair' %}text-warning
                                    {% else %}text-danger{% endif %}">
                                    {{ skill_match.matchPercentage }}%
                                </h2>
                                <p class="text-muted">Overall Match</p>
                            </div>
                            <span class="badge 
                                {% if skill_match.level == 'excellent' %}bg-success
                                {% elseif skill_match.level == 'good' %}bg-primary
                                {% elseif skill_match.level == 'fair' %}bg-warning
                                {% else %}bg-danger{% endif %} fs-6 px-3 py-2">
                                {{ skill_match.level|upper }}
                            </span>
                        </div>
                        
                        {% if skill_match.matchedSkills|length > 0 %}
                        <div class="mb-2">
                            <h6 class="text-success"><i class="fas fa-check-circle me-2"></i>Matched Skills ({{ skill_match.matchedSkills|length }})</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for jobSkill in skill_match.matchedSkills %}
                                <span class="badge bg-success">{{ jobSkill.skill.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if skill_match.missingSkills|length > 0 %}
                        <div class="mb-2 mt-3">
                            <h6 class="text-danger"><i class="fas fa-times-circle me-2"></i>Missing Skills ({{ skill_match.missingSkills|length }})</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for jobSkill in skill_match.missingSkills %}
                                <span class="badge bg-danger">{{ jobSkill.skill.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                
                <!-- Your Skills -->
                {% if application.skills|length > 0 %}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>Your Skills ({{ application.skills|length }})</h5>
                        <a href="{{ path('app_candidate_add_skill', {'id': application.id}) }}" class="btn btn-primary btn-sm rounded-pill">
                            <i class="fas fa-plus me-1"></i>Add Skill
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            {% for candidateSkill in application.skills %}
                            <span class="badge bg-info fs-6">
                                {{ candidateSkill.skill.name }}
                                <span class="badge bg-light text-dark ms-1">{{ candidateSkill.level.name }}</span>
                            </span>
                            {% endfor %}
                        </div>
                        <div class="alert alert-info mt-3 mb-0">
                            <i class="fas fa-lightbulb me-2"></i>
                            <small>Tip: Add more skills to your <a href="{{ path('app_candidate_profile') }}">profile</a> - they'll be automatically included in future applications!</small>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- CV Documents -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>CV Documents</h5>
                        <a href="{{ path('app_candidate_upload_cv', {'id': application.id}) }}" class="btn btn-primary btn-sm rounded-pill">
                            <i class="fas fa-upload me-1"></i>Upload CV
                        </a>
                    </div>
                    <div class="card-body">
                        {% if application.cvs|length > 0 %}
                            <div class="list-group">
                                {% for cv in application.cvs %}
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-file-pdf text-danger me-2"></i>
                                            <a href="{{ asset('uploads/cvs/' ~ cv.filePath) }}" target="_blank">
                                                {{ cv.filePath }}
                                            </a>
                                            <br>
                                            <small class="text-muted">Uploaded: {{ cv.uploadedAt|date('M d, Y \\a\\t H:i') }}</small>
                                        </div>
                                        <div>
                                            <a href="{{ asset('uploads/cvs/' ~ cv.filePath) }}" class="btn btn-sm btn-outline-primary rounded-pill me-1" target="_blank">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            <form action="{{ path('app_candidate_delete_cv', {'id': cv.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this CV?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-cv' ~ cv.id) }}">
                                                <button class="btn btn-sm btn-outline-danger rounded-pill">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-4">
                                <i class="fas fa-file-upload fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No CV uploaded yet</h6>
                                <p class="text-muted">Upload your CV to strengthen your application.</p>
                                <a href="{{ path('app_candidate_upload_cv', {'id': application.id}) }}" class="btn btn-primary rounded-pill">
                                    <i class="fas fa-upload me-2"></i>Upload CV
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Actions -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_job_offer_show', {'id': application.jobOffer.id}) }}" class="btn btn-outline-primary rounded-pill">
                                <i class="fas fa-external-link-alt me-2"></i>View Job Offer
                            </a>
                            <a href="{{ path('app_candidate_upload_cv', {'id': application.id}) }}" class="btn btn-primary rounded-pill">
                                <i class="fas fa-upload me-2"></i>Upload CV
                            </a>
                            <a href="{{ path('app_candidate_dashboard') }}" class="btn btn-outline-secondary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to Applications
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Application Timeline -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-history me-2"></i>Timeline</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <strong>Application Submitted</strong>
                                <br><small class="text-muted">{{ application.createdAt|date('M d, Y \\a\\t H:i') }}</small>
                            </li>
                            {% if application.cvs|length > 0 %}
                                {% for cv in application.cvs %}
                                    <li class="mb-3">
                                        <i class="fas fa-file-alt text-primary me-2"></i>
                                        <strong>CV Uploaded</strong>
                                        <br><small class="text-muted">{{ cv.uploadedAt|date('M d, Y \\a\\t H:i') }}</small>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
