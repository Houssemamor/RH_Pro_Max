{% extends 'base.html.twig' %}

{% block title %}My Profile - RH Pro Max{% endblock %}

{% block header %}
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">My Profile</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_candidate_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active text-primary">My Profile</li>
        </ol>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Personal Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <th class="text-muted" style="width: 30%">Full Name</th>
                                <td><strong>{{ candidate.fullName }}</strong></td>
                            </tr>
                            <tr>
                                <th class="text-muted">Email</th>
                                <td>{{ candidate.email }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Phone</th>
                                <td>{{ candidate.phone ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th class="text-muted">Member Since</th>
                                <td>{{ candidate.createdAt|date('F d, Y') }}</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Skills Section -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-star me-2"></i>My Skills ({{ candidate.profileSkills|length }})</h5>
                        <a href="{{ path('app_candidate_profile_add_skill') }}" class="btn btn-primary btn-sm rounded-pill">
                            <i class="fas fa-plus me-1"></i>Add Skill
                        </a>
                    </div>
                    <div class="card-body">
                        {% if candidate.profileSkills|length > 0 %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                These skills will be automatically added to all your future job applications.
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Skill</th>
                                            <th>Level</th>
                                            <th>Experience</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for profileSkill in candidate.profileSkills %}
                                        <tr>
                                            <td>
                                                <strong>{{ profileSkill.skill.name }}</strong>
                                                {% if profileSkill.skill.category %}
                                                <br><small class="text-muted">{{ profileSkill.skill.category.name }}</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge 
                                                    {% if profileSkill.level.value == 'EXPERT' %}bg-danger
                                                    {% elseif profileSkill.level.value == 'ADVANCED' %}bg-warning
                                                    {% elseif profileSkill.level.value == 'INTERMEDIATE' %}bg-info
                                                    {% else %}bg-secondary{% endif %}">
                                                    {{ profileSkill.level.name }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if profileSkill.yearsExperience %}
                                                    {{ profileSkill.yearsExperience }} year{{ profileSkill.yearsExperience > 1 ? 's' : '' }}
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <form action="{{ path('app_candidate_profile_delete_skill', {'id': profileSkill.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Remove this skill from your profile?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-profile-skill' ~ profileSkill.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger rounded-pill">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="text-center py-5">
                                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No skills added yet</h6>
                                <p class="text-muted">Add your skills to improve your job application matches.</p>
                                <a href="{{ path('app_candidate_profile_add_skill') }}" class="btn btn-primary rounded-pill">
                                    <i class="fas fa-plus me-2"></i>Add Your First Skill
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_candidate_profile_add_skill') }}" class="btn btn-primary rounded-pill">
                                <i class="fas fa-plus me-2"></i>Add Skill
                            </a>
                            <a href="{{ path('app_candidate_dashboard') }}" class="btn btn-outline-secondary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mt-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Tips</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Add all your relevant skills</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Be honest about your skill levels</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Skills are auto-imported to applications</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Update regularly as you learn</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
