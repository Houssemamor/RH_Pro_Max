{% extends 'base.html.twig' %}

{% block title %}Upload CV - {{ application.jobOffer.title }} - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Upload CV</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_candidate_dashboard') }}">My Applications</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_candidate_application_show', {'id': application.id}) }}">{{ application.jobOffer.title }}</a></li>
            <li class="breadcrumb-item active text-primary">Upload CV</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-upload me-2"></i>Upload Your CV</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>For application:</strong> {{ application.jobOffer.title }}
                        </div>

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': '', 'enctype': 'multipart/form-data'}}) }}
                            <div class="mb-4">
                                {{ form_label(form.cvFile, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.cvFile, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.cvFile) }}
                                <div class="form-text">
                                    <i class="fas fa-file-alt me-1"></i>Accepted formats: PDF, DOC, DOCX (max 5MB)
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary rounded-pill">
                                    <i class="fas fa-upload me-2"></i>Upload CV
                                </button>
                                <a href="{{ path('app_candidate_application_show', {'id': application.id}) }}" class="btn btn-outline-secondary rounded-pill">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                {% if application.cvs|length > 0 %}
                    <div class="card shadow-sm mt-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="fas fa-file-alt me-2"></i>Previously Uploaded CVs</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                {% for cv in application.cvs %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-file-pdf text-danger me-2"></i>
                                            {{ cv.filePath }}
                                            <br>
                                            <small class="text-muted">{{ cv.uploadedAt|date('M d, Y') }}</small>
                                        </div>
                                        <a href="{{ asset('uploads/cvs/' ~ cv.filePath) }}" class="btn btn-sm btn-outline-primary rounded-pill" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
