{% extends 'base.html.twig' %}

{% block title %}Skill Categories - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Skill Categories</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item active text-primary">Skill Categories</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-layer-group me-2"></i>Skill Categories</h2>
            <a href="{{ path('app_skill_category_new') }}" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i>Add New Category
            </a>
        </div>
        
        <div class="table-responsive bg-white rounded shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for skill_category in skill_categories %}
                    <tr>
                        <td>{{ skill_category.id }}</td>
                        <td><strong>{{ skill_category.name }}</strong></td>
                        <td>{{ skill_category.description|length > 80 ? skill_category.description|slice(0, 80) ~ '...' : skill_category.description }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_skill_category_show', {'id': skill_category.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_skill_category_edit', {'id': skill_category.id}) }}" class="btn btn-sm btn-outline-warning rounded-pill" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No skill categories found</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
